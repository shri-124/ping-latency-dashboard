{
    "id": null,
    "uid": "ping-latency",
    "title": "Ping & Latency",
    "tags": ["ping"],
    "timezone": "",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "10s",
    "panels" : [
        {
            "type": "stat",
            "title": "Targets",
            "gridPos": {"x": 0, "y": 0, "w": 4, "h": 4},
            "targets": [
                {"expr": "count(ping_up)", "refId": "A"}
            ]
        },
        {
            "type": "timeseries",
            "title": "Latency (s)",
            "gridPos": {"x": 0, "y": 4, "w": 24, "h": 10},
            "targets": [
                {"expr": "ping_latency_seconds", "refId": "A"},
                {"expr": "ping_latency_threshold_seconds", "refId": "B"}
            ],
            "options": {"legend": {"displayMode": "table", "placement": "right"}}
        },
        {
            "type": "state-timeline",
            "title": "Up/Down",
            "gridPos": {"x": 0, "y": 14, "w": 24, "h": 8},
            "targets": [
                {"expr": "ping_up", "refId": "A"}
            ]
        }
    ]
}